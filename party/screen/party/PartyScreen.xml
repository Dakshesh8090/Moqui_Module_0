<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd">

    <!--    this is my createParty transition-->
    <transition name="createParty">
        <service-call name="create#party.Party"/>
        <default-response url="."/>
    </transition>

    <!--    this is my delete Party transition-->
    <transition name="deleteParty">
        <service-call name="delete#party.Party"/>
        <default-response url="."/>
    </transition>

    <transition name="createPerson">
        <service-call name="create#party.Person"/>
        <default-response url="../PersonScreen"/>
    </transition>

    <transition name="createPartyGroup">
        <service-call name="create#party.PartyGroup"/>
        <default-response url="../PartyGroupScreen"/>
    </transition>


    <actions>
<!--        this is from party list-->
        <entity-find entity-name="party.Party" list="partyList">
            <search-form-inputs/>
        </entity-find>

<!--        this is from person list-->
        <entity-find entity-name="party.Person" list="personList">
            <search-form-inputs/>
        </entity-find>
    </actions>
    <widgets>

        <container-dialog id="CreatePartyDialog" button-text="Create Party">
            <form-single name="CreateParty" transition="createParty">
                <auto-fields-entity entity-name="party.Party" field-type="edit"/>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>

        <container-dialog id="DeleteContainerDialog" button-text="Delete Party">
            <form-single name="DeleteParty" transition="deleteParty">
                <field name="partyId">
                    <default-field><text-area/></default-field>
                </field>
            <field name="submitButton"><default-field title="Delete"><submit/></default-field></field>
        </form-single>
        </container-dialog>

<!--this is a dialog of create Person-->
        <container-dialog id="createPersonDialog" button-text="Create Person">
            <form-single name="CreatePerson" transition="createPerson">
                <auto-fields-entity entity-name="party.Person" field-type="edit"/>
                <field name="submitPerson"><default-field title="Create"><submit/>
                </default-field></field>
            </form-single>
        </container-dialog>


<!--        this is a dialog for create PartyGroup-->
        <container-dialog id="createPartyGroupDialog" button-text="Create Party Group">
            <form-single name="CreatePartyGroup" transition="createPartyGroup">
                <auto-fields-entity entity-name="party.PartyGroup" field-type="edit"/>
                <field name="submitPartyGroup"><default-field title="Create"><submit/>
                </default-field></field>
            </form-single>
        </container-dialog>
        

<!--        this code is showing the table on UI-->
        <form-list name="ListParty" list="partyList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="party.Party" field-type="find-display"/>
        </form-list>
    </widgets>
</screen>